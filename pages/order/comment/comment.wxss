/* pages/feedback/feedback.wxss */

.feedback-container {
  padding-top: 45rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  width: 100%;
  height: 100%;
}

.feedback-text {
  height: 500rpx;
  width: 750rpx;
  background-color: white;
}

.text-border {
  border: 8rpx solid #a0cdb4;
  height: 400rpx;
  width: 650rpx;
  overflow: hidden;
  position: relative;
}

.text-remainder {
  font-size: 40rpx;
  color: #a0cdb4;
}

.text-form {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.text-button {
  width: 750rpx;
  height: 100rpx;
  text-align: center;
}

.box {
  width: 100rpx;
  height: 77rpx;
}

button::after {
  border: none;
}

button[disabled] {
  color: white !important;
  background: #a0cdb4 !important;
}

button {
  margin-top: 20rpx;
  width: 500rpx;
  color: white;
  background-color: #66b075;
  border-radius: 0;
}

.feedback-remainder {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  right: 5rpx;
  bottom: 5rpx;
}

textarea {
  height: 400rpx;
  width: 650rpx;
}
