/* pages/order/order.wxss */

.navbar {
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 30px;
  flex-direction: row;
  text-align: center;
  color: #000;
  font-size: 25rpx;
  font-weight: 600;
  box-sizing: border-box;
  background-color: #fff;
}

.navbar-item {
  flex: 1;
  padding: 26rpx 0px;
}

.navbar-item-active {
  transition: all 0.3s;
  color: #1976d2;
}

.movie-content-wrapper {
  padding-top: 40px;
  height: 100%;
  width: 100%;
}

page {
  width: 100%;
  height: 100%;
}

.container {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.box-list {
  position: relative;
  display: block;
  width: 700rpx;
  height: 280rpx;
  margin: 40rpx auto;
  background-color: #fff;
}

.box-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.box-blankIcon {
  position: absolute;
  top: 300rpx;
  width: 150rpx;
  height: 150rpx;
}

.box-blankText {
  position: absolute;
  top: 450rpx;
  font-size: 35rpx;
  color: #a8a8a8;
}

.order-img {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  width: 115rpx;
  height: 115rpx;
  border-radius: 50%;
}

.order-name {
  position: absolute;
  left: 170rpx;
  top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 300rpx;
  height: 50rpx;
}

.order-wxName {
  color: #000;
  font-size: 30rpx;
  font-weight: 600;
}

.order-arrow {
  width: 5px;
  height: 5px;
  border-top: 1px solid black;
  border-right: 1px solid black;
  transform: rotate(45deg);
}

.order-express {
  position: absolute;
  width: 450rpx;
  height: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  left: 170rpx;
  top: 100rpx;
  color: #828f8e;
  font-size: 25rpx;
}

.order-line {
  position: absolute;
  left: 170rpx;
  top: 135rpx;
  width: 500rpx;
  height: 3rpx;
  background-color: #828f8e;
}

.order-money {
  position: absolute;
  top: 150rpx;
  right: 0rpx;
  width: 300rpx;
  height: 30rpx;
  color: #828f8e;
  font-size: 25rpx;
}

.order-moneyText {
  color: #000;
  letter-spacing: 3rpx;
  font-weight: 600;
}
.order-button{
  position: absolute;
  top:190rpx;
  right: 35rpx;
  width: 270rpx;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
button::after{ 
	border: none; 
  border-radius: 0;
}
.btn {
  width: 126rpx;
  background: none;
  border-radius: 0;
  padding: 0rpx 13rpx;
  font-size: 23rpx;
  color: #262727;
}

.btn1 {
  background-color: #f5f6fa;
  border: 1rpx solid #dcdde1;
}

.btn2 {
  border: none;
  background-color: #dcdde1;
}
